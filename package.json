{
  "type": "module",
  "name": "hoobot",
  "version": "2.0.0",
  "description": "Hoobot is reactive algorithmic crypto trading bot with suport for OpenAI GPT and many other indicators.",
  "main": "src/index.ts",
  "scripts": {
    "postinstall": "patch-package",
    "test": "npx jest",
    "clean:build": "rm -rf build",
    "clean:ts": "rm -rf build-ts",
    "clean:dev": "rm -rf build-dev",
    "webpack:development": "webpack --config webpack.config.js --mode=development",
    "webpack:production": "webpack --config webpack.config.js --mode=production",
    "build:development": "npm-run-all -s clean:dev webpack:development",
    "build:production": "npm-run-all -s clean:build webpack:production",
    "build": "npm-run-all -s clean:ts build:production clean:ts",
    "start": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" node --experimental-modules build/hoobot.js",
    "start:development": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" node --experimental-modules build-dev/hoobot.js",
    "dev": "npm-run-all -s clean:ts build:development clean:ts start:development",
    "simulate": "cross-env SIMULATE=\"true\" NODE_OPTIONS=\"--max-old-space-size=8192\" node --experimental-modules build/hoobot.js"
  },
  "author": "Toni Lukkaroinen",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.12",
    "bufferutil": "^4.0.8",
    "cross-env": "^7.0.3",
    "discord.js": "^14.11.0",
    "dotenv": "^16.4.4",
    "node-binance-api": "^0.13.1",
    "npm-run-all": "^4.1.5",
    "openai": "^4.15.0",
    "original-fs": "^1.2.0",
    "patch-package": "^8.0.0",
    "play-sound": "^1.1.5",
    "utf-8-validate": "^5.0.10",
    "zlib-sync": "^0.1.9"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/play-sound": "^1.1.2",
    "json-loader": "^0.5.7",
    "node-loader": "^2.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
