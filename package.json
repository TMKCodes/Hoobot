{
  "type": "module",
  "name": "hoobot",
  "version": "2.3.4",
  "description": "Hoobot is reactive algorithmic crypto trading bot with suport for OpenAI GPT and many other indicators.",
  "main": "src/index.ts",
  "scripts": {
    "postinstall": "patch-package",
    "test": "npx jest",
    "clean:build": "rm -rf build",
    "clean:ts": "rm -rf build-ts",
    "clean:dev": "rm -rf build-dev",
    "copy:frontend:build": "cp -r src/Frontend/ build/",
    "copy:frontend:dev": "cp -r src/Frontend/ build-dev/",
    "webpack:development": "webpack --config webpack.config.js --mode=development",
    "webpack:production": "webpack --config webpack.config.js --mode=production",
    "build:development": "npm-run-all -s clean:dev webpack:development copy:frontend:dev",
    "build:production": "npm-run-all -s clean:build webpack:production copy:frontend:build",
    "build": "npm-run-all -s clean:ts build:production clean:ts",
    "start": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" pm2 start node --name app-production -- build/hoobot.js",
    "start:nopm2": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" node --experimental-modules build/hoobot.js",
    "start:nowebui": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" NOWEBUI=\"true\" node --experimental-modules build/hoobot.js",
    "start:development": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" DEVELOPMENT=\"true\" node --experimental-modules build-dev/hoobot.js",
    "dev": "npm-run-all -s clean:ts build:development clean:ts start:development",
    "simulate": "cross-env SIMULATE=\"true\" NODE_OPTIONS=\"--max-old-space-size=8192\" node --experimental-modules build-dev/hoobot.js",
    "stop": "pm2 stop app-production && pm2 delete app-production && pm2 save --force",
    "list": "pm2 status",
    "logs": "pm2 logs"
  },
  "author": "Toni Lukkaroinen",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.12",
    "bufferutil": "4.0.9",
    "discord-api-types": "^0.38.11",
    "discord.js": "^14.19.3",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "cross-env": "^10.0.0",
    "node-binance-api": "0.13.5",
    "npm-run-all": "^4.1.5",
    "openai": "5.2.0",
    "original-fs": "^1.2.0",
    "patch-package": "8.0.0",
    "play-sound": "1.1.6",
    "pm2": "6.0.8",
    "utf-8-validate": "6.0.5",
    "zlib-sync": "0.1.10"
  },
  "devDependencies": {
    "@types/adm-zip": "0.5.7",
    "@types/express": "5.0.3",
    "@types/play-sound": "^1.1.2",
    "json-loader": "^0.5.7",
    "node-loader": "^2.0.0",
    "ts-loader": "9.5.2",
    "webpack": "5.99.9",
    "webpack-cli": "6.0.1"
  }
}